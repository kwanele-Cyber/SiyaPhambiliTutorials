@model StudyMaterialViewModel
@{
    ViewData["Title"] = Model.StudyMaterialId == 0 ? "Add New Material" : "Edit Material");
}

<h2>@(Model.StudyMaterialId == 0 ? "Add New Material" : "Edit Material")</h2>
<form asp-action="@(Model.StudyMaterialId == 0 ? "Create" : "Edit")" method="post">
    <input type="hidden" asp-for="StudyMaterialId" />
    <div>
        <label asp-for="Title"></label>
        <input asp-for="Title" />
    </div>
    <div>
        <label asp-for="Description"></label>
        <textarea asp-for="Description"></textarea>
    </div>
    <div>
        <label asp-for="Price"></label>
        <input asp-for="Price" />
    </div>
    <div>
        <label asp-for="MaterialUrl">Material URL</label>
        <input asp-for="MaterialUrl" />
    </div>
    <button type="submit">Save</button>
</form>
